{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/seed-tools", "dest": "/api/seed-tools.js" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/robots.txt", "dest": "/public/robots.txt" },
    { "src": "/sitemap.xml", "dest": "/public/sitemap.xml" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}